{
	"java.configuration.updateBuildConfiguration": "automatic",
	"json.schemas": [
        {
            "fileMatch": [ "/*.map.json" ],
            "url": "./jpo-geojsonconverter/src/resources/map.schema.json"
        },
        {
            "fileMatch": [ "/*.spat.json" ],
            "url": "./jpo-geojsonconverter/src/resources/spat.schema.json"
        },
		{
			"fileMatch": [ "**/*.intersection-map.json" ],
			"url": "./docs/output-data-definition/intersection-map.schema.json"
		},
		{
			"fileMatch": [ "**/*.intersection-spat.json" ],
			"url": "./docs/output-data-definition/intersection-spat.schema.json"
		}
    ]
}